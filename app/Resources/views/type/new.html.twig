{% extends 'main/main.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="grid">
                <div class="grid-header">
                    <i class="fa fa-align-left"></i>
                    <span class="grid-title">Agregar Tipo</span>
                    <div class="pull-right grid-tools">
                        <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                        <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                        <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="grid-body">
                    {{ form_start(form, {'attr': { 'class':'form-horizontal', 'role' : 'form' }  }) }}
                    <div class="form-group">
                        {{ form_label(form.name,'Tipo', { 'label_attr':{ 'class':'col-sm-3 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(form.name) }}
                            {{ form_widget(form.name, {'attr': {'class':'form-control selectpicker','data-live-search':'true','title':'Seleccione la marca','data-size':'10'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label"></label>
                        <div class="col-sm-7">
                            <input type="submit" value="Crear" class="btn btn-primary"/>
                            <a href="{{ path('type_index') }}" class="btn btn-default">Regresar al listado</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
