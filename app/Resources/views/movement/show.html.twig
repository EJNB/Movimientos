{% extends 'base.html.twig' %}

{% block body %}
    <h1>Movement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movement.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if movement.date %}{{ movement.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('movement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('movement_edit', { 'id': movement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
