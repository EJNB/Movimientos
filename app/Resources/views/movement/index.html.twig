{% extends 'main/main.html.twig' %}

{% block content %}
    {{ include('include/flash-message.html.twig') }}
    <div class="col-md-12">
        <div class="grid no-border">
            <div class="grid-header">
                <i class="fa fa-table"></i>
                <span class="grid-title">Movimientos</span>
                <div class="pull-right grid-tools">
                    <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                    <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                    <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                </div>
            </div><!--/.grid-header-->
            <div class="grid-body">
                <table id="dataTables1" class="table table-hover display" cellspacing="0" width="100%">
                    <thead>
                    <th>No</th>
                    <th>Fecha</th>
                    <th>Instalaci&oacuten</th>
                    <th>Entrega</th>
                    <th>Recibe</th>
                    <th>N&uacutemero de movimiento</th>
                    {#<th>Documentos Escaneados</th>#}
                    <th>Acciones</th>
                    </thead>
                    <tbody>
                    {% for movement in movements %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ movement.date | date('d-m-Y') }}</td>
                            <td>{{ movement.person.instalation }}</td>
                            <td>{{ movement.user }}</td>
                            <td>{{ movement.person }}</td>
                            <td>{{ movement.number }}</td>
                            {#<td></td>#}
                            <td>
                                <a href="{{ path('movement_show', { 'id': movement.id }) }}" data-toggle="tooltip" data-placement="top" title="Ver">
                                    <i class="fa fa-eye fa-lg"></i>
                                </a>
                                <a href="{{ path('movement_edit',{ 'id' : movement.id }) }}" data-toggle="tooltip" data-placement="top" title="Editar">
                                    <i class="fa fa-pencil fa-lg"></i>
                                </a>
                                <a href="javascript:void(0)"
                                   class="link-tooltip link-eliminar"
                                   data-url="{{ path('movement_delete',{ 'id':movement.id }) }}"
                                   data-toggle="modal"
                                   data-target="#modal-delete"
                                   data-placement="top"
                                   title="Eliminar"
                                >
                                    <i class="fa fa-trash-o fa-lg"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
                <a href="{{ path('movement_new') }}" class="btn btn-primary">Agregar</a>
            </div>
        </div>
    </div>
    {{ include('include/modals.html.twig') }}
{% endblock %}
