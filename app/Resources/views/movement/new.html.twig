{% extends 'main/main.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="grid">
                <div class="grid-header">
                    <i class="fa fa-align-left"></i>
                    <span class="grid-title">Agregar Equipo</span>
                    <div class="pull-right grid-tools">
                        <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                        <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                        <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="grid-body">
                    {{ form_start(form, {'attr': { 'class':'form-horizontal', 'role' : 'form' }  }) }}
                    <div class="form-group">
                        {{ form_label(form.date,'Fecha', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(form.date) }}
                            {{ form_widget(form.date, {'attr': {'class':'form-control selectpicker','data-live-search':'true','title':'Seleccione el territorio','data-size':'10'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.instalation,'Instalación', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(form.instalation) }}
                            {{ form_widget(form.instalation, {'attr': {'class':'form-control','placeholder':'Introdusca el nombre de la instalación'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">Recibe</label>
                        <div class="col-sm-4 show-persons">
                            {{ include(':include:persons.html.twig') }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Seleccione los equipos</label>
                        <div class="col-sm-4">
                            <select multiple name="equipment_selected[]" required class="selectpicker form-control" data-live-search="true">
                                {% for equipment in equipments %}
                                    <option value="{{ equipment.id }}">{{ equipment.description }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label"></label>
                        <div class="col-sm-4">
                            <input type="submit" value="Crear" class="btn btn-primary"/>
                            <a href="{{ path('movement_index') }}" class="btn btn-default">Regresar al listado</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
