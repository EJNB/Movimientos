{% extends 'main/main.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="grid">
                <div class="grid-header">
                    <i class="fa fa-align-left"></i>
                    <span class="grid-title">Editar Equipo</span>
                    <div class="pull-right grid-tools">
                        <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                        <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                        <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="grid-body">
                    {{ form_start(edit_form, {'attr': { 'class':'form-horizontal', 'role' : 'form' }  }) }}
                    <div class="form-group">
                        {{ form_label(edit_form.type,'Tipo', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(edit_form.type) }}
                            {{ form_widget(edit_form.type, {'attr': {'class':'form-control selectpicker','data-live-search':'true','title':'Seleccione el tipo'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.mark,'Marca', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-md-4">
                            {{ form_errors(edit_form.mark) }}
                            {{ form_widget(edit_form.mark, {'attr': {'class':'form-control selectpicker','data-live-search':'true','title':'Seleccione la marca'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.model,'Modelo', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(edit_form.model) }}
                            {{ form_widget(edit_form.model, {'attr': {'class':'form-control selectpicker','data-live-search':'true','title':'Seleccione el modelo'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.ni,'Número de Invetario', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(edit_form.ni) }}
                            {{ form_widget(edit_form.ni, {'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.ns,'Número de Serie', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(edit_form.ns) }}
                            {{ form_widget(edit_form.ns, {'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label"></label>
                        <div class="col-sm-4">
                            <input type="submit" value="Editar" class="btn btn-primary"/>
                            <a href="{{ path('equipment_index') }}" class="btn btn-default">Regresar al listado</a>
                        </div>
                    </div>

                    {{ form_end(edit_form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
