{% extends 'main/main.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="grid">
                <div class="grid-header">
                    <i class="fa fa-align-left"></i>
                    <span class="grid-title">Agregar Equipo</span>
                    <div class="pull-right grid-tools">
                        <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                        <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                        <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="grid-body">
                    {{ form_start(form, {'attr': { 'class':'form-horizontal', 'role' : 'form' }  }) }}
                    <div class="form-group">
                        {{ form_label(form.type,'Tipo', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(form.type) }}
                            {{ form_widget(form.type, {'attr': {'class':'form-control selectpicker','data-live-search':'true','title':'Seleccione el tipo'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.mark,'Marca', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-md-4">
                            {{ form_errors(form.mark) }}
                            {{ form_widget(form.mark, {'attr': {'class':'form-control selectpicker','data-live-search':'true','title':'Seleccione la marca'}}) }}
                        </div>
                        <div class="col-md-2">
                            <a class="btn btn-default btn-flat md-trigger" data-toggle="tooltip" data-placement="top" title="Add marca" data-modal="add-marca">
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.model,'Modelo', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(form.model) }}
                            {{ form_widget(form.model, {'attr': {'class':'form-control selectpicker','data-live-search':'true','title':'Seleccione el modelo'}}) }}
                        </div>
                        <div class="col-md-2">
                            {# Add Model #}
                            <a class="md-trigger btn btn-default btn-flat" data-toggle="tooltip" data-placement="top" title="Add modelo" data-modal="add-model">
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.ni,'Número de Invetario', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(form.ni) }}
                            {{ form_widget(form.ni, {'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.ns,'Número de Serie', { 'label_attr':{ 'class':'col-sm-4 control-label' } }) }}
                        <div class="col-sm-4">
                            {{ form_errors(form.ns) }}
                            {{ form_widget(form.ns, {'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label"></label>
                        <div class="col-sm-4">
                            <input type="submit" value="Crear" class="btn btn-primary"/>
                            <a href="{{ path('equipment_index') }}" class="btn btn-default">Regresar al listado</a>
                        </div>
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
    {{ include('include/modals.html.twig') }}
{% endblock %}
