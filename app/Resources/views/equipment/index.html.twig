{% extends 'main/main.html.twig' %}

{% block content %}
    {{ include('include/flash-message.html.twig') }}
    <div class="col-md-12">
        <div class="grid no-border">
            <div class="grid-header">
                <i class="fa fa-table"></i>
                <span class="grid-title">Equipos disponibles en Almacen</span>
                <div class="pull-right grid-tools">
                    <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                    <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                    <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
                </div>
            </div><!--/.grid-header-->
            <div class="grid-body">
                <table id="dataTables1" class="table table-hover display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Tipo</th>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Ni</th>
                            <th>Ns</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for equipment in equipment %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ equipment.type }}</td>
                            <td>{{ equipment.model.mark  }}</td>
                            <td>{{ equipment.model  }}</td>
                            <td>{{ equipment.ni }}</td>
                            <td>{{ equipment.ns }}</td>
                            <td>
                                <a href="{{ path('equipment_show',{ 'id' : equipment.id }) }}" data-toggle="tooltip" data-placement="top" title="Ver">
                                    <i class="fa fa-eye fa-lg"></i>
                                </a>
                                <a href="{{ path('equipment_edit',{ 'id' : equipment.id }) }}" data-toggle="tooltip" data-placement="top" title="Editar">
                                    <i class="fa fa-pencil fa-lg"></i>
                                </a>
                                <a href="javascript:void(0)"
                                   class="link-tooltip link-eliminar"
                                   data-text="{{ equipment.type }}"
                                   data-url="{{ path('equipment_delete',{ 'id':equipment.id }) }}"
                                   data-toggle="modal"
                                   data-target="#modal-delete"
                                   data-placement="top"
                                   title="Eliminar">
                                    <i class="fa fa-trash-o fa-lg"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('equipment_new') }}" class="btn btn-primary">Agregar</a>
            </div>
        </div>
    </div>
    {{ include('include/modals.html.twig') }}
{% endblock %}
