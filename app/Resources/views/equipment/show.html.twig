{% extends 'main/main.html.twig' %}

{% block content %}

{{ include('include/flash-message.html.twig') }}
<div class="col-md-12">
    <div class="grid no-border">
        <div class="grid-header">
            <i class="fa fa-table"></i>
            <span class="grid-title">{{ equipment.type }} {{ equipment.model.mark }} {{ equipment.model }}</span>
            <div class="pull-right grid-tools">
                <a data-widget="collapse" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                <a data-widget="reload" title="Reload"><i class="fa fa-refresh"></i></a>
                <a data-widget="remove" title="Remove"><i class="fa fa-times"></i></a>
            </div>
        </div><!--/.grid-header-->
        <div class="grid-body">
            <table class="table table-responsive">
                <tbody>
                    <tr>
                        <th>Marca</th>
                        <td>{{ equipment.model.mark }}</td>
                    </tr>
                    <tr>
                        <th>Alta en almacen</th>
                        <td>{{ equipment.createAt | date('d-m-Y h:i') }}</td>
                    </tr>
                    <tr>
                        <th>Numero de Inventario</th>
                        <td>{{ equipment.ni }}</td>
                    </tr>
                    <tr>
                        <th>Numero de Inventario</th>
                        <td>{{ equipment.ni }}</td>
                    </tr>
                    <tr>
                        <th>Numero de serie</th>
                        <td>{{ equipment.ns }}</td>
                    </tr>
                </tbody>
            </table>
            <a href="{{ path('equipment_edit', { 'id': equipment.id }) }}" class="btn btn-warning">Editar</a>
            <a href="{{ path('equipment_index') }}" class="btn btn-default">Regresar al listado</a>
        </div>
    </div>
</div>

{% endblock %}
